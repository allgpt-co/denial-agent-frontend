{
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
        "noEmit": false,
        "emitDeclarationOnly": true,
        "allowImportingTsExtensions": false,
        "outDir": "dist"
    },
    "include": [
        "src/index.ts",
        "src/components/**/*",
        "src/hooks/**/*",
        "src/lib/**/*"
    ],
    "exclude": [
        "src/main.tsx",
        "src/App.tsx",
        "src/**/*.test.ts",
        "src/**/*.test.tsx"
    ]
}